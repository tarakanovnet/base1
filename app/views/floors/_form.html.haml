= form_for @floor do |f|
  - if @floor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@floor.errors.count, "error")} prohibited this floor from being saved:"
      %ul
        - @floor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :pos_x
    = f.text_field :pos_x
  .field
    = f.label :pos_y
    = f.text_field :pos_y
  .field
    = f.label :tags
    = f.text_area :tags
  .field
    = f.label :information
    = f.text_area :information
  .actions
    = f.submit 'Save'
