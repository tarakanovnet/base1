= form_for @worker do |f|
  - if @worker.errors.any?
    #error_explanation
      %h2= "#{pluralize(@worker.errors.count, "error")} prohibited this worker from being saved:"
      %ul
        - @worker.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :post
    = f.text_area :post
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :first_name
    = f.text_area :first_name
  .field
    = f.label :second_name
    = f.text_area :second_name
  .field
    = f.label :last_name
    = f.text_area :last_name
  .field
    = f.label :mail
    = f.text_field :mail
  .field
    = f.label :duty
    = f.text_area :duty
  .actions
    = f.submit 'Save'
