= form_for @role do |f|
  - if @role.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :shortname
    = f.text_area :shortname
  .field
    = f.label :englishname
    = f.text_area :englishname
  .actions
    = f.submit 'Save'
