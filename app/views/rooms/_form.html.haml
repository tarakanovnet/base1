= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :pos_x
    = f.text_field :pos_x
  .field
    = f.label :pos_y
    = f.text_field :pos_y
  .field
    = f.label :tags
    = f.text_area :tags
  .field
    = f.label :information
    = f.text_area :information
  .actions
    = f.submit 'Save'
